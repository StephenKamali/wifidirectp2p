<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/frag_list"
            class="cs3220.project.wifidirectp2p.DeviceListFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <!-- Preview: layout=@layout/row_devices -->
        </fragment>

        <TextView
            android:id="@+id/this_device_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/connect_to_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONNECT TO HOPSCOTCH" />

        <Button
            android:id="@+id/broadcast_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BROADCAST TEST"
            android:visibility="gone" />

        <fragment
            class="cs3220.project.wifidirectp2p.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>
    </LinearLayout>
</LinearLayout>